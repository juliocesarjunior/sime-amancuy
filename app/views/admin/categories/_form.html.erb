<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<h5 class="card-title"><%= @category.id.nil? ? 'Inserir' : 'Editar' %> <%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h5>
		</div>
		<div class="card-body">
			<%= simple_form_for ([:admin, @category]) do |f| %>
			<div class="row">
				<div class="col-md-6 col-12 mb-3">
					<%= f.input :status, as: :select, collection: Category.statuses.keys.map { |status| [I18n.t("enums.status.#{status}"), status] }, input_html: { class: "form-control form-select"}, hint_html: {class: "form-text"}, label_html: {class: "form-label"} %>
				</div>
			</div>
			<div class="row">
				<div class="mb-3">
					<%= f.input :name, include_blank: false, input_html: { class: "form-control form-control-lg"}%>
				</div>
			</div>
			<button type="submit" class="btn btn-success"><%= @category.id.nil? ? 'Cadastrar' : 'Editar' %></button>
			<%= link_to "Cancelar", admin_categories_path, class: "btn btn-danger me-1" %>

			<% end -%>
		</div>
	</div>
</div>