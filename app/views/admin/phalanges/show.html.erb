<%- model_class = Phalange -%>
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4"><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h6>
                
                <div class="row text-center">
                    <div class="mb-3 col-12">
                        <%= link_to t('.cancel', default: t("helpers.links.edit")),edit_admin_phalange_path(@phalange), class: 'btn btn-outline-primary' %>
                        <%= link_to t('.cancel', default: t("helpers.links.back")),admin_phalanges_path, class: 'btn btn-outline-primary' %>
                    </div>
                </div>

                <div class="row">
                    <div class="mb-3 col-12 text-center profile">
                        <img src="<%= @phalange.image.url.nil? ? '' : @phalange.image.url %>" width="302" height="210" alt="<%= @phalange&.name %>">
                    </div>
                    <div class="mb-3 col-4">
                        <%= model_class.human_attribute_name(:order) -%>: 
                        <input class="string optional form-control" value="<%= @phalange.order %>" readonly disabled>
                    </div>
                    <div class="mb-3 col-4">
                        <%= model_class.human_attribute_name(:name) -%>: 
                        <input class="string optional form-control" value="<%= @phalange.name %>" readonly disabled>
                    </div>
                    <div class="mb-3 col-4">
                        <%= model_class.human_attribute_name(:status) -%>: 
                        <input class="string optional form-control" value="<%= I18n.t("enums.status.#{@phalange&.status}") %>" readonly disabled>
                    </div>
                    <div class="mb-3 col-12">
                        <%= model_class.human_attribute_name(:description) -%>: 
                        <input class="string optional form-control" value="<%= @phalange.description %>" readonly disabled>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>