<%- model_class = Library -%>
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4"><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h6>
                
                <div class="row text-center">
                    <div class="mb-3 col-12">
                        <%= link_to t('.cancel', default: t("helpers.links.edit")),edit_admin_library_path(@library), class: 'btn btn-outline-primary' %>
                        <%= link_to t('.cancel', default: t("helpers.links.back")),admin_libraries_path, class: 'btn btn-outline-primary' %>
                    </div>
                </div>

                <div class="row">
                    <div class="mb-3 col-12 text-center profile">
                        <img src="/assets/backgrounds/pdf.png" width="auto" height="auto" alt="<%= @library&.name %>">
                    </div>
                    <div class="mb-3 col-2">
                        <%= model_class.human_attribute_name(:id) -%>: 
                        <input class="string optional form-control" value="<%= @library.id %>" readonly disabled>
                    </div>
                    <div class="mb-3 col-4">
                        <%= model_class.human_attribute_name(:name) -%>: 
                        <input class="string optional form-control" value="<%= @library.name %>" readonly disabled>
                    </div>
                    <div class="mb-3 col-4">
                        <%= model_class.human_attribute_name(:description) -%>: 
                        <input class="string optional form-control" value="<%= @library.description %>" readonly disabled>
                    </div>
                    <div class="mb-3 col-2">
                        <%= model_class.human_attribute_name(:status) -%>: 
                        <input class="string optional form-control" value="<%= I18n.t("enums.status.#{@library&.status}") %>" readonly disabled>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>